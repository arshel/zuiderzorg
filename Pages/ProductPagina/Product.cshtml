.Blikopener {
    width: 400px;
    height: 500px;
}



button.Back {
    position: relative;
    height: 200px;
    width: 200px;
    top: 0px;
    left: 0px;
    border: 3px solid #73AD21;
    border-width: right;
    background-color: white;
