<p id="WM"></p>

<script>
    function GoBack() {
        location.href = "http://localhost:5090/";
    }
    function ToProduct() {
        location.href = "https://www.wibra.nl/assortiment/blikopener-rvs/";
    }
    function InShoppingCart() {
        document.getElementsByID("WM").innerHTML = "Toegevoegd aan winkelmandje";
